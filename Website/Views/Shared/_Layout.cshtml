<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Beaujeaux Beaux: Pt. Deux</title>
    @Styles.Render("~/Content/css")
    @RenderSection("styles", required: false)
</head>
<body>

    <div class="navbar navbar-expand-md fixed-top navbar-dark bg-primary">
        <div class="container">
            <a href="../" class="navbar-brand"><img src="~/img/pooshicon.png" /> Beaujeaux Beaux</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("Seasons", "Skater", "SeasonStats", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Careers", "Skater", "CareerStats", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Players", "Index", "PlayerStats", null, new { @class = "nav-link" })
                    </li>
                </ul>

                <ul class="nav navbar-nav ml-auto">
                    <li class="nav-item">
                        @Html.ActionLink("Requests", "Requests", "Home", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Halp Plz", "Halp", "Home", null, new { @class = "nav-link" })
                    </li>
                </ul>

            </div>
        </div>
    </div>

    <div class="body-content">
        <br />
        @RenderBody()
        <hr />
    </div>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
